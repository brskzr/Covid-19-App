<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/asul</item>
    </style>

    <style name="MainActivtyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/MainActionBar</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/asul</item>
    </style>

    <style name="search_edittext">
        <item name="android:background">@drawable/shape_bg_search_edittext</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
    </style>

    <style name="MainActionBar">
        <item name="android:background">@color/primaryTransparent</item>
        <item name="background">@color/primaryTransparent</item>
    </style>

</resources>
